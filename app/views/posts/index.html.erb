<div class="masonry">
  <% @posts.each do |post| %>
    <div class="post-box col-lg-4 col-md-4 col-sm-4">
      <%= link_to image_tag(post.content, class: 'img-responsive img-thumbnail', style: "width: #{calculate_width}px; height: #{calculate_height(post.width, post.height) + 30}px;"), post %>
    </div>
  <% end %>
</div>
